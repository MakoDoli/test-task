model recipes {
  id           BigInt    @id @default(autoincrement()) // bigint with identity = autoincrement
  createdAt    DateTime  @default(now()) @map("created_at")
  title        String?   @db.Text
  description  String?   @db.Text
  image        String?   @db.Text
  cook_time    String?   @db.Text
  prep_time    String?   @db.Text
  servings     String?   @db.Text
  difficulty   String?   @db.Text
  rating       Float?    @default(4.5)
  reviews      String?   @db.Text
  category     String?   @db.Text
  vegetarian   Boolean?  @default(false)
  cuisine      String?   @db.Text
  ingredients  Json?     // jsonb
  instructions Json?     // jsonb
  nutrition    Json?     // jsonb
  tips         Json?     // jsonb
  author       String?   @default("admin") @db.Text
  type         String?   @db.Text

  @@map("recipes")
}
